</head>

@using Vidly.Controllers
@using Vidly.Models
@using Vidly.ViewModels
@model Vidly.ViewModels.MoviesListViewModel

<body>

@{
    ViewBag.Title = "MoviesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 >Movies</h2>

@if (Model.Movies.Count == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table id="movies" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody></tbody>
        <tbody>
    
        @{

            var i = 1;

        }
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td> @movie.Name
                </td> <td> N/A </td>  <td> N/A </td>
            </tr>
            i++;
        }
        </tbody >
    </table>

    @*<td> <a @Html.ActionLink(@Movie.Name, "CustomerIndividual", "Customers",	new	{	id	=	
                i	}, null)></a>*@
}
    
</body>

</html>